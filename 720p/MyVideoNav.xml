<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50,51,55,555,554,52,521,522,53,531,54,541,57,571,572,574,575</views>
	<onload condition="System.HasAddon(script.tv.show.next.aired) + !Skin.HasSetting(nextaired.disable)">XBMC.RunScript(script.tv.show.next.aired,backend=True)</onload>
	<onload condition="System.HasAddon(script.tvtunes) + Skin.HasSetting(tvtunes.enable)">XBMC.RunScript(script.tvtunes,backend=True)</onload>
	<controls>
		<!--trigger-->
		<control type="button" id="8000">
			<label>SHOULD NOT SEE ME</label>
			<onup>53</onup>
			<ondown>71</ondown>
			<onleft>53</onleft>
			<onright>53</onright>
			<width>500</width>
			<visible allowhiddenfocus="true">false</visible>
		</control>
		<!--global includes-->
		<include>global_Background</include>
		<!--view includes-->
		<include>view_List</include>
		<!--50-->
		<include>view_BigList</include>
		<!--51-->
		<include>view_RightList</include>
		<!--55-->
		<include>view_LeftList</include>
		<!--555-->
		<include>view_BottomSlide</include>
		<!--554-->
		<include>view_SlidePoster</include>
		<!--52-->
		<include>view_SlideLandscape</include>
		<!--521-->
		<include>view_SlideSquare</include>
		<!--522-->
		<include>view_Gallery</include>
		<!--53-->
		<include>view_GalleryFull</include>
		<!--531-->
		<include>view_Banner</include>
		<!--54-->
		<include>view_BigBanner</include>
		<!--541-->
		<include>view_IconPortrait</include>
		<!--57-->
		<include>view_IconPortraitSmall</include>
		<!--571-->
		<include>view_IconSquare</include>
		<!--572-->
		<include>view_IconSquareSmall</include>
		<!--574-->
		<include>view_IconWide</include>
		<!--575-->
		<include>global_MenuGuide</include>
		<include>global_Includes</include>
		<include>windowTitle_Video</include>
		<!--detail includes-->
		<include>detail_ListMusic</include>
		<include>detail_ListAddons</include>
		<include>detail_Slide</include>
		<include>detail_Thumbnails</include>
		<!--list-->
		<control type="group">
			<include>toggle_Menu</include>
			<include>transition_Info</include>
			<include>transition_Content</include>
			<include>fadeinout</include>
			<visible>Control.IsVisible(50)</visible>
			<!--landscape-->
			<control type="group">
				<control type="group">
					<left>680</left>
					<top>90</top>
					<visible>[[Container.Content(movies) | Container.Content(tvshows)] + Skin.HasSetting(view.list.fanart)] | Container.Content(artists) | Container.Content(episodes)</visible>
					<control type="group">
						<left>7</left>
						<top>7</top>
						<control type="image">
							<width>546</width>
							<height>309</height>
							<texture background="true">white.png</texture>
							<fadetime>fadetime_Thumb</fadetime>
							<aspectratio align="center" aligny="top">scale</aspectratio>
							<visible>Container.Position(0)</visible>
						</control>
						<control type="image">
							<left>202</left>
							<top>83.5</top>
							<width>128</width>
							<height>128</height>
							<include>art_DefaultIcon</include>
							<colordiffuse condition="Container.Position(0)">Color5</colordiffuse>
							<fadetime>fadetime_Thumb</fadetime>
						</control>
						<control type="image">
							<width>546</width>
							<height>309</height>
							<texture background="true">$VAR[thumb_Landscape]</texture>
							<include>bordertrans</include>
							<fadetime>fadetime_Thumb</fadetime>
							<aspectratio align="center" aligny="top">scale</aspectratio>
						</control>
						<control type="image">
							<width>546</width>
							<height>309</height>
							<texture background="true">overlays/cover_overlay.png</texture>
							<fadetime>fadetime_Thumb</fadetime>
							<aspectratio align="center" aligny="top">scale</aspectratio>
							<visible>!Skin.HasSetting(globalGlass.disable)</visible>
						</control>
						<control type="textbox">
							<top>315</top>
							<width>532</width>
							<height>auto</height>
							<label>$VAR[global_Plot]</label>
							<include>detail_Text</include>
						</control>
					</control>
				</control>
			</control>
			<!--portrait-->
			<control type="group">
				<left>750</left>
				<top>80</top>
				<control type="group">
					<visible>!Container.Content(episodes) + [Container.Content(movies) | Container.Content(tvshows) | !SubString(Container.FolderPath,plugin://)] + !Skin.HasSetting(view.list.fanart) | Container.Content(actors) | Container.Content(seasons) | Container.Content(sets) +  !Container.Content(episodes)</visible>
					<control type="group">
						<left>7</left>
						<top>7</top>
						<control type="image">
							<width>420</width>
							<height>614</height>
							<texture background="true">white.png</texture>
							<fadetime>fadetime_Thumb</fadetime>
							<aspectratio align="center" aligny="top">scale</aspectratio>
							<visible>Container.Position(0)</visible>
						</control>
						<control type="image">
							<left>139</left>
							<top>236</top>
							<width>128</width>
							<height>128</height>
							<include>art_DefaultIcon</include>
							<colordiffuse condition="Container.Position(0)">Color5</colordiffuse>
							<fadetime>fadetime_Thumb</fadetime>
						</control>
						<control type="image">
							<width>420</width>
							<height>614</height>
							<texture background="true">$VAR[thumb_Portrait]</texture>
							<include>bordertrans</include>
							<aspectratio align="center" aligny="center">scale</aspectratio>
							<fadetime>fadetime_Thumb</fadetime>
						</control>
						<control type="image">
							<width>420</width>
							<height>614</height>
							<texture background="true">overlays/cover_overlay.png</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
							<fadetime>fadetime_Thumb</fadetime>
							<visible>!Skin.HasSetting(globalGlass.disable)</visible>
						</control>
					</control>
				</control>
			</control>
			<!--files-->
			<control type="group">
				<visible>Container.Content(musicvideos) | Container.Content(files)</visible>
				<control type="group">
					<left>680</left>
					<top>80</top>
					<control type="image">
						<width>532</width>
						<height>614</height>
						<texture fallback="thumbs/default_Landscape.png" background="true">$INFO[ListItem.Thumb]</texture>
						<bordertexture border="7">frames/frame-nf.png</bordertexture>
						<bordersize>7</bordersize>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<fadetime>fadetime_Thumb</fadetime>
						<visible>!IsEmpty(ListItem.Thumb) + !SubString(Container.FolderPath,plugin://) + !IsEmpty(Container.FolderPath)</visible>
					</control>
					<control type="image">
						<width>532</width>
						<height>614</height>
						<texture background="true">overlays/cover_overlay.png</texture>
						<aspectratio align="center" aligny="center">scale</aspectratio>
						<fadetime>fadetime_Thumb</fadetime>
						<visible>!IsEmpty(ListItem.Thumb) + !SubString(Container.FolderPath,plugin://) + !IsEmpty(Container.FolderPath) + !Skin.HasSetting(globalGlass.disable)</visible>
					</control>
					<control type="group">
						<left>7</left>
						<top>17</top>
						<include>overlay_Watch</include>
						<visible>!SubString(Container.FolderPath,special://videoplaylists)</visible>
					</control>
				</control>
			</control>
		</control>
		<!--scrollbars-->
		<include>PageControls</include>
		<!--menu-->
		<include>menu_Video</include>
	</controls>
</window>